#include <Servo.h>
Servo sr, sl;
void setup() {
  Serial.begin(9600);
  sr.attach(13); sl.attach(12);
}

void loop() {
  if (Serial.available()) {
    char b[2];  //pitch b[0], roll b[1]
    int p, r;
    Serial.readBytes(b, 2);
    p = b[0] * 3; // 피치값 -90~0~90, 전 후진  // 1500-270 ~ 1500+270
    r = b[1];        // 롤 값 -90~0~90, 좌 우회전  // 1500-90 ~ 1500+90
    sr.write(1500 + p - r);
    sl.write(1500 - p - r);
    Serial.write('1');
  }
}


블루투스의 정보를 받아 아두이노 로봇을 피칭으로 앞뒤 롤링으로 좌,우 로 움직이는 코드입니다.
-------------------------------
소감 

이번과제는 수업시간에 다같이 한 수업이라서 별어려움이 없었지만 전체적으로 조원들이랑 소통을 하며 같이 만들어 보았습니다.
결과적으로 쉽게 성공이 되어서 다 같이 빠르게 했습니다. 하지만 블루투스 연결하는 법을 배우고 앱인벤터를 사용하는것을 배워서 흥미가 넘쳐 흘렀습니다!!
아두이노 사랑합니다.!!
